<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="horizontal"
    tools:context=".C_Controls">

    <Button
        android:id="@+id/left_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="0dp"
        android:text="L"
        android:textSize="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/right_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="0dp"
        android:text="R"
        android:textSize="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/left_button"
        android:layout_toEndOf="@+id/left_button" />

    <Button
        android:id="@+id/jump_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="0dp"
        android:text="^"
        android:textSize="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/shoot_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="0dp"
        android:text="X"
        android:textSize="60dp"
        android:layout_toLeftOf="@+id/jump_button"
        android:layout_toStartOf="@+id/jump_button"
        android:layout_alignParentBottom="true" />

    <Chronometer
        android:id="@+id/timeValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="PLAY BONUS"
        android:id="@+id/play_song"
        android:layout_alignBottom="@+id/shoot_button"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="NEXT"
        android:id="@+id/next_song"
        android:layout_alignTop="@+id/play_song"
        android:layout_toRightOf="@+id/play_song"
        android:layout_toEndOf="@+id/play_song" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="PREVIOUS"
        android:id="@+id/previous_song"
        android:layout_alignTop="@+id/play_song"
        android:layout_toLeftOf="@+id/play_song"
        android:layout_toStartOf="@+id/play_song" />


</RelativeLayout>
